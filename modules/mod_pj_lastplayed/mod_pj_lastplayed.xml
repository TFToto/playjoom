<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>mod_pj_lastplayed</name>
	<author>Torsten Freyda</author>
	<creationDate>October 2011</creationDate>
	<copyright>Copyright (C) 2010 - 2011 by teglo. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@teglo.info</authorEmail>
	<authorUrl>playjoom.teglo.info</authorUrl>
	<version>1.0.0</version>
	<description>MOD_PLAYJOOM_LASTPLAYED_XML_DESCRIPTION</description>
	<files>
		<filename
			module="mod_pj_lastplayed">mod_pj_lastplayed.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_pj_lastplayed.xml</filename>
	</files>
	
	<languages>
		<language tag="en-GB">language/en-GB.mod_pj_lastplayed.ini</language>
		<language tag="en-GB">language/en-GB.mod_pj_lastplayed.sys.ini</language>
		<language tag="de-DE">language/de-DE.mod_pj_lastplayed.ini</language>
		<language tag="de-DE">language/de-DE.mod_pj_lastplayed.sys.ini</language>
	</languages>
	
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_LATEST_NEWS" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="count"
					type="text"
					default="5"
					size="2"
					label="MOD_PLAYJOOM_LASTPLAYED_FIELD_COUNT"
					description="MOD_PLAYJOOM_LASTPLAYED_FIELD_COUNT_DESC" />
               <field
                        name="viewtype_for_access_time"
                        type="list"
                        label="MOD_PLAYJOOM_PLAYJOOM_FIELD_VIEWTYPE_ACCESSTIME_LABEL"
                        description="MOD_PLAYJOOM_PLAYJOOM_FIELD_VIEWTYPE_ACCESSTIME_LABEL"
                        default="0"
                >
                        <option value="1">MOD_PLAYJOOM_PLAYJOOM_FIELD_DATE</option>
		                <option value="2">MOD_PLAYJOOM_PLAYJOOM_FIELD_DISTANCE</option>
		                <option value="3">MOD_PLAYJOOM_PLAYJOOM_FIELD_COMBI</option>
			            <option value="0">NO</option>
                </field>
                <field
                        name="date_format"
                        type="list"
                        label="MOD_PLAYJOOM_PLAYJOOM_FIELD_DATE_FORMAT_LABEL"
                        description="MOD_PLAYJOOM_PLAYJOOM_FIELD_DATE_FORMAT_LABEL_DESC"
                        default="0"
                >
                        <option value="DATE_FORMAT_LC1">MOD_PLAYJOOM_PLAYJOOM_FIELD_DATEFORMAT_ONE</option>
		                <option value="DATE_FORMAT_LC2">MOD_PLAYJOOM_PLAYJOOM_FIELD_DATEFORMAT_TWO</option>
		                <option value="DATE_FORMAT_LC3">MOD_PLAYJOOM_PLAYJOOM_FIELD_DATEFORMAT_THREE</option>
			            <option value="DATE_FORMAT_LC4">MOD_PLAYJOOM_PLAYJOOM_FIELD_DATEFORMAT_FOUR</option>
                </field>
			</fieldset>

			<fieldset
				name="advanced">
				
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="icon_class"
					type="text"
					label="MOD_PJ_LASTPLAYED_FIELD_ICONCLASS_LABEL"
					description="MOD_PJ_LASTPLAYED_FIELD_ICONCLASS_LABEL_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
