<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site"
	method="upgrade">
	<name>mod_pj_footer</name>
	<author>Telgo Project</author>
	<creationDate>September 2013</creationDate>
	<copyright>Copyright (C) 2010 - 2013 by teglo. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@teglo.info</authorEmail>
	<authorUrl>playjoom.teglo.info</authorUrl>
	<version>1.0.0</version>
	<description>MOD_PJ_FOOTER_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_pj_footer">mod_pj_footer.php</filename>
		<folder>tmpl</folder>
		<filename>index.html</filename>		
		<filename>mod_pj_footer.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_pj_footer.ini</language>
		<language tag="en-GB">language/en-GB.mod_pj_footer.sys.ini</language>
		<language tag="de-DE">language/de-DE.mod_pj_footer.ini</language>
		<language tag="de-DE">language/de-DE.mod_pj_footer.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_FOOTER" />
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
				<field
					name="show_pj_version"
					type="radio"
					default="true"
					label="MOD_PJ_SEARCH_FIELD_SHOW_PJ_VERSION"
					description="MOD_PJ_SEARCH_FIELD_SHOW_PJ_VERSION_DESC"
					class="btn-group"
				>
					<option value="true">JYES</option>
                    <option value="false">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
