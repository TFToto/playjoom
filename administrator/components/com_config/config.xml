	<name>com_config</name>
	<author>Joomla! Project</author>
	<creationDate>April 2006</creationDate>
	<copyright>(C) 2005 - 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>COM_CONFIG_XML_DESCRIPTION</description>
	<scriptfile>setupscript.php</scriptfile>

	<files folder="site">
		<folder>controller</folder>
		<folder>model</folder>
		<folder>view</folder>
		<filename>config.php</filename>
		<filename>index.html</filename>
		<filename>setupscript.php</filename>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_config.ini</language>
		<language tag="de-DE">language/de-DE.com_config.ini</language>
	</languages>

	<administration>
		<files folder="admin">
			<folder>controller</folder>
			<folder>controllers</folder>
			<folder>helper</folder>
			<folder>model</folder>
			<folder>models</folder>
			<folder>view</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.php</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_config.ini</language>
			<language tag="en-GB">language/en-GB.com_config.sys.ini</language>
			<language tag="de-DE">language/de-DE.com_config.ini</language>
			<language tag="de-DE">language/de-DE.com_config.sys.ini</language>
		</languages>
	</administration>
</extension>
