                        name="catid"
                        type="category"
                        extension="com_playjoom"
                        class="inputbox"
                        default=""
                        label="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_CATEGORY_LABEL"
                        description="COM_PLAYJOOM_PLAYJOOM_FIELD_CATID_DESC"
                        required="true"
                >
                        <option value="0">JOPTION_SELECT_CATEGORY</option>
                </field>
                
        </fieldset>
        <fieldset name="text-contents">
                <field name="infotxt" 
                       type="editor" 
                       class="inputbox"
                       width="900"
                       height="650"
			           label="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_INFOTEXT_LABEL" 
			           description="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_INFOTEXT_LABEL_DESC"
			           filter="PlayJoomHelper::filterText" 
			           buttons="true" 
			    />        
