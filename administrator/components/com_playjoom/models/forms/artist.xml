<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset name="details">
                <field
                        name="id"
                        type="hidden"
                />
                <field
                        name="name"
                        type="text"
                        label="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_NAME_LABEL"
                        description="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_NAME_LABEL_DESC"
                        size="40"                        
                        required="true"
                        default=""
                />
                <field
                        name="members"
                        type="text"
                        label="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_MEMBERS_LABEL"
                        description="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_MEMBERS_LABEL_DESC"
                        size="70"                        
                        required="false"
                        default=""
                />
                <field
                        name="formation"
                        type="calendar" 
                        default="" 
                        label="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_FORMATION_LABEL" 
                        description="COM_PLAYJOOM_PLAYJOOM_FIELD_ARTIST_FORMATION_LABEL_DESC" 
                        format="%d-%m-%Y" 
                />
